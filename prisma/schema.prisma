generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

model Project {
  id         String   @id @default(cuid())
  slug       String   @unique
  youtubeUrl String
  image      String?
  published  Boolean  @default(false)
  titleEn    String
  titleFa    String
  descEn     String
  descFa     String
  order      Int      @default(0)
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt
}

model HeroSlide {
  id         String   @id @default(cuid())
  titleEn    String
  titleFa    String
  subtitleEn String
  subtitleFa String
  imageUrl   String
  order      Int      @default(0)
  active     Boolean  @default(true)
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt
}
